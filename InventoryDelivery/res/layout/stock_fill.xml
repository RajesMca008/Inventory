<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/holo_blue_light"
    android:orientation="vertical" >

    <include layout="@layout/title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:src="@drawable/inventory_delivery" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               
                android:background="@color/holo_blue_light" >
                <!--  android:alpha="0.7" -->
            </LinearLayout>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main_buttons"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="To Warehouse Details"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp" >
                    
                    
                    
                    
                      <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Employee Id"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                       
                        <TextView
                            android:id="@+id/et_EmpID"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />
                    </TableRow>
                      <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Employee Name"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                       
                        <TextView
                            android:id="@+id/et_EmpName"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />
                    </TableRow>
                    

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vendor Id"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                       
                        <EditText
                            android:id="@+id/et_venId"
                            android:layout_width="fill_parent"
                            android:layout_height="33dp"
                            android:text=""
                            android:background="@drawable/edt_style"
                           
                            android:minWidth="150dp"
                            android:singleLine="true"
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vehicle No"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                       
                        <EditText
                            android:id="@+id/et_vehNO"
                            android:layout_width="fill_parent"
                            android:layout_height="33dp"
                            android:text=""
                             android:background="@drawable/edt_style"
                          
                            android:minWidth="150dp"
                            android:singleLine="true"
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />
                    </TableRow>

                 
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Proc Qty"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                       
                        <EditText
                            android:id="@+id/et_procQty"
                            android:layout_width="fill_parent"
                            android:layout_height="33dp"
                            android:text=""
                             android:background="@drawable/edt_style"
                            android:inputType="text|numberDecimal"
                            android:minWidth="150dp"
                            android:singleLine="true"
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />
                    </TableRow>
                    
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Empty Given"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                       
                        <EditText
                            android:id="@+id/et_emptyGiven"
                            android:layout_width="fill_parent"
                            android:layout_height="33dp"
                            android:text=""
                             android:background="@drawable/edt_style"
                            android:inputType="text|numberDecimal"
                            android:minWidth="150dp"
                            android:singleLine="true"
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />
                    </TableRow>
                    
                      <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Empty Taken"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                       
                        <EditText
                            android:id="@+id/et_emptyTaken"
                            android:layout_width="fill_parent"
                            android:layout_height="33dp"
                            android:text=""
                             android:background="@drawable/edt_style"
                            android:inputType="text|numberDecimal"
                            android:minWidth="150dp"
                            android:singleLine="true"
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />
                    </TableRow>
                    
                        <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Amount Paid"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                       
                        <EditText
                            android:id="@+id/et_amtPaid"
                            android:layout_width="fill_parent"
                            android:layout_height="33dp"
                            android:text=""
                             android:background="@drawable/edt_style"
                            android:inputType="text|numberDecimal"
                            android:minWidth="150dp"
                            android:singleLine="true"
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />
                    </TableRow>
                    
                           <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Paid Details"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                       
                        <EditText
                            android:id="@+id/et_amtPaiddetails"
                            android:layout_width="fill_parent"
                            android:layout_height="33dp"
                            android:text=""
                             android:background="@drawable/edt_style"
                           
                            android:minWidth="150dp"
                            android:singleLine="true"
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />
                    </TableRow>
                    
                              
                    
                </TableLayout>

           

             

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                  
                    android:background="@android:color/white" />
                <!--   android:alpha="0.5" -->

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/main_buttons"
                    android:minHeight="40dp"
                    android:minWidth="100dp"
                    android:textStyle="bold"
                    android:text="Submit"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>